<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aggge12.labb3.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/timerPlayer2"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/timerPlayer1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="289dp" />

    <TextView
        android:id="@+id/textplayer2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="White Player"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resetButton"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/timerPlayer2"
        app:layout_constraintLeft_toRightOf="@+id/textplayer1" />

    <TextView
        android:id="@+id/textplayer1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Black Player"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/startButton"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timerPlayer1"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintRight_toLeftOf="@+id/textplayer2" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="117dp"
        android:layout_height="82dp"
        android:onClick="StartCounting"
        android:text="start"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="117dp"
        android:layout_height="82dp"
        android:text="stop"
        android:onClick="StopCounting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@+id/resetButton"
        app:layout_constraintLeft_toRightOf="@+id/startButton" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="118dp"
        android:layout_height="82dp"
        android:text="reset"
        android:onClick="ResetCount"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/timerPlayer1"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/timerPlayer2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="289dp" />

</android.support.constraint.ConstraintLayout>
